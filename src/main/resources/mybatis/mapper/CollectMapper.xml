<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.ysqorz.forum.dao.CollectMapper">
  <resultMap id="BaseResultMap" type="top.ysqorz.forum.po.Collect">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="post_id" jdbcType="INTEGER" property="postId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>

  <select id="selectCollectPostListByUserId" resultType="top.ysqorz.forum.dto.resp.PostDTO">
    select c.post_id as id, p.title, c.create_time
    from collect c left join post p  ON p.id = c.post_id
    where c.user_id = #{userId}

  </select>
</mapper>